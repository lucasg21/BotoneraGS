                android:layout_column="1"
                android:layout_weight="1"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
