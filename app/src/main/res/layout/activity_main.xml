                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="19dp"
                android:onClick="sendMessage"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_gravity="start"/>

            <Button
